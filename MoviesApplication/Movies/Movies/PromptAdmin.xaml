<Window x:Class="Movies.PromptAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromptAdmin" Height="137" Width="394"
        ResizeMode="NoResize">
    <Grid Margin="0,0,2,2">
        <Label Content="Enter Password:" HorizontalAlignment="Left" Height="25" Margin="40,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="Prompt_Confirm" IsDefault="True" Content="Ok" HorizontalAlignment="Left" Height="24" Margin="175,70,0,0" VerticalAlignment="Top" Width="85" Click="Prompt_Confirm_Click"/>
        <Button x:Name="Prompt_Back" Content="Back" HorizontalAlignment="Left" Height="24" Margin="289,70,0,0" VerticalAlignment="Top" Width="85" Click="Prompt_Back_Click"/>
        <PasswordBox x:Name="Prompt_Password"  MaxLength="8" HorizontalAlignment="Left" Height="20" Margin="145,15,0,0" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="Prompt_Wrong" Content="Incorect password" HorizontalAlignment="Left" Height="25" Margin="145,35,0,0" VerticalAlignment="Top" Width="150" Foreground="#FFFD0606"/>

    </Grid>
</Window>
